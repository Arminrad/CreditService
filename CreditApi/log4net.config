<log4net>
	<root>
		<level value="ALL" />
		<appender-ref ref="Rolltxtfile" />
	</root>


	<appender name="txtfile" type="log4net.Appender.FileAppender">
		<file value="C:\Users\98935\Desktop\logs\weblogs.txt" />
		<appendToFile value="true" />


		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value= "%date %level %logger.%method [%line] - %message%newline" />
		</layout>
	</appender>




	<appender name="Rolltxtfile" type="log4net.Appender.RollingFileAppender">
		<file value="C:\Users\98935\Desktop\logs\weblogs-rolling.txt" />
		<appendToFile value="true" />
		<maximumFileSize value="1024kb" />
		<maxSizeRollBackups value="3" />

		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value= "%date %level %logger.%method [%line] - %message%newline" />
		</layout>
	</appender>







	<appender name="txtfilee" type="log4net.Appender.FileAppender">
		<file value="C:\Users\98935\Desktop\logs\weblogss.txt" />
		<appendToFile value="true" />


		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value= "%date %level %logger.%method [%line] - %message%newline" />
		</layout>
	</appender>

</log4net>